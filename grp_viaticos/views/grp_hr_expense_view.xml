            <field name="signal">cancelar</field>
            <field name="group_id"></field>
        </record>

        <!--TODO: SPRING 11 GAP 318 K creando transicion-->
        <record id="hr_expense.t16" model="workflow.transition">
            <field name="act_from" ref="act_cancelado"/>
